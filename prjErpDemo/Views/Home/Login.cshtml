@{
    ViewData["Title"] = "Login";
}

<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-primary"></div>
                <div class="card bg-white">
                    <div class="card-body p-5">
                        <form method="post" class="mb-3 mt-md-4">
                            <h2 class="fw-bold mb-2">YS Demo ERP Service</h2>
                            <p class=" mb-5">Please enter your login and password!</p>
                            <div class="mb-3">
                                <label for="email" class="form-label ">Account Name</label>
                                <input type="text" class="form-control" id="email" name="loginAccount" placeholder="account name" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label ">Password</label>
                                <input type="password" class="form-control" id="password" name="loginPassword" placeholder="*******" required>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-outline-dark" type="submit">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/frontend/Login.js"></script>
}
